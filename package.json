{
    "name": "choco-kanban",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "build:apk": "cd android && gradlew assembleRelease",
        "lint": "vue-cli-service lint --fix",
        "deploy:firebase": "yarn lint && yarn build && firebase deploy --only hosting",
        "deploy:local": "yarn lint && yarn build && serve -s dist",
        "gen:i": "npx vue-asset-generate -a public/img/icon.png -o public/img/icons --no-manifest",
        "push": "yarn lint && git add . && git commit -am update --no-verify && git push",
        "gen:res": "capacitor-resources -p android",
        "copy:ks": "copy *.keystore android\\app"
    },
    "dependencies": {
        "@babel/polyfill": "^7.4.4",
        "@capacitor/android": "^3.0.1",
        "@capacitor/cli": "^3.0.1",
        "@capacitor/core": "^3.0.1",
        "@fortawesome/fontawesome-free": "5.15.3",
        "core-js": "^3.6.5",
        "register-service-worker": "^1.7.1",
        "roboto-fontface": "*",
        "store": "^2.0.12",
        "vue": "^2.6.11",
        "vue-router": "^3.2.0",
        "vuetify": "^2.4.0",
        "vuex": "^3.4.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-plugin-pwa": "~4.5.0",
        "@vue/cli-plugin-router": "~4.5.0",
        "@vue/cli-plugin-vuex": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/eslint-config-prettier": "^6.0.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^6.7.2",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-vue": "^6.2.2",
        "node-sass": "^4.12.0",
        "prettier": "^2.2.1",
        "sass-loader": "^8.0.2",
        "vue-cli-plugin-vuetify": "~2.4.1",
        "vue-template-compiler": "^2.6.11",
        "webpack": "^5.38.1"
    }
}
